# Wind Tunnel Data Acquisition System - Environment Configuration

# Application
DEBUG=true

# Serial/Arduino Configuration
# Linux: /dev/ttyUSB0, /dev/ttyACM0
# Windows: COM3, COM4
# MacOS: /dev/cu.usbmodem*
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUDRATE=115200
SERIAL_TIMEOUT=0.10
SERIAL_RETRY_INTERVAL=5.0

# Use mock Arduino for development (set to false for real hardware)
USE_MOCK_ARDUINO=false

# Data Configuration
DATA_DIR=data
READINGS_FILE=readings.json
READING_INTERVAL=0.5

# CORS (comma-separated)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
